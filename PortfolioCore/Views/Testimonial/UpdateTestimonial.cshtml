@model Testimonial
@{
	ViewData["Title"] = "UpdateTestimonial";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h1>Referans Güncelleme</h1>
<form method="post">
	<input type="hidden" asp-for="TestimonialId" />
	<label>Ad Soyad</label>
	<input type="text" asp-for="NameSurname" class="form-control" />
	<br />
	<label>Ünvan</label>
	<input type="text" asp-for="Title" class="form-control" />
	<br />
	<label>Referans Açıklaması</label>
	<input type="text" asp-for="CommentDetail" class="form-control" />
	<br />
	<label>Görsel Yolu</label>
	<input type="text" asp-for="İmageUrl" class="form-control" />
	<br />
	<button class="btn btn-primary">Değişiklikleri Kaydet</button>
</form>

