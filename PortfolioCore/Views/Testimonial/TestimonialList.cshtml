@model List<Testimonial>
@{
	ViewData["Title"] = "TestimonialList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referanslarım Listesi</h2>
<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Adı Soyadı</th>
		<th>Ünvan</th>
		<th>Referans Açıklaması</th>
		<th>Görsel Yolu</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.TestimonialId</td>
			<td>@item.NameSurname</td>
			<td>@item.Title</td>
			<td>@item.CommentDetail</td>
			<td>@item.İmageUrl</td>
			<td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a> </td>
			<td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a> </td>
		</tr>
	}
</table>
<a href="/Testimonial/CreateTestimonial" class="btn btn-dark">Yeni Referans Ekle</a>
