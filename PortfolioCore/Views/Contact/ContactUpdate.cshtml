@model Contact
@{
    ViewData["Title"] = "ContactUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1>İletişim Güncelleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="ContactId" />
    <label>Adres</label>
    <input type="text" class="form-control" asp-for="Adress" style="border:1px solid black;" />
    <br />
    <label>Telefon</label>
    <input type="text" class="form-control" asp-for="PhoneNumber" style="border:1px solid black;" />
    <br />
    <label>Email</label>
    <input type="text" class="form-control" asp-for="Email" style="border:1px solid black;" />
    <br />
    <label>Konum(iframe olarak)</label>
    <input type="text" class="form-control" asp-for="Location" style="border:1px solid black;" />
    <br />
    <button class="btn btn-success">İletişim Bilgilerini Kaydet</button>
</form>



