@model Services
@{
	ViewData["Title"] = "CreateServices";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Hizmet Girişi</h1>
<form method="post">
	<label>Hizmet Başlığı</label>
	<input type="text" asp-for="ServicesTitle" class="form-control" />
	<br />
	<label>Hizmet Açıklaması</label>
	<input type="text" asp-for="ServicesDescription" class="form-control" />
	<br />
	<label>Icon Yolu</label>
	<input type="text" asp-for="ServicesIconUrl" class="form-control" />
	<br />
	<button class="btn btn-primary">Kaydet</button>
</form>

