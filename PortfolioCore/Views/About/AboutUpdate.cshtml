@model PortfolioCore.Entities.About
@{
	ViewData["Title"] = "AboutUpdate";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımda Güncelleme</h1>
<form method="post">
	<input type="hidden" asp-for="AboutId" />
	<label>Başlık</label>
	<input type="text" asp-for="AboutTitle" class="form-control" />
	<br />
	<label>Açıklama</label>
	<input type="text" asp-for="AboutDescription" class="form-control" />
	<br />
	<label>Ünvan</label>
	<input type="text" asp-for="AboutTitle2" class="form-control" />
	<br />
	<label>Alt Başlık</label>
	<input type="text" asp-for="AboutSubTitle" class="form-control" />
	<br />
	<label>Doğum Tarihi</label>
	<input type="text" asp-for="AboutBirthday" class="form-control" />
	<br />
	<label>Web Adresi </label>
	<input type="text" asp-for="AboutWebSiteAddress" class="form-control" />
	<br />
	<label>Telefon</label>
	<input type="text" asp-for="AboutPhone" class="form-control" />
	<br />
	<label>Adres</label>
	<input type="text" asp-for="AboutAddress" class="form-control" />
	<br />
	<label>Yaş</label>
	<input type="text" asp-for="AboutAge" class="form-control" />
	<br />
	<label>Email</label>
	<input type="text" asp-for="AboutEmail" class="form-control" />
	<br />
	<label>Çalışma Durumu</label>
	<input type="text" asp-for="Freelance" class="form-control" />
	<br />
	<label>Derece</label>
	<input type="text" asp-for="AboutRatio" class="form-control" />
	<br />
	<button class="btn btn-primary">Değişiklikleri Kaydet</button>



</form>