@model List<Message>
@{
	ViewData["Title"] = "MessageList";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2> Gelen Mesaj Listesi </h2>
<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Ad Soyad</th>
		<th>Mail Adresi</th>
		<th>Konu</th>
		<th>Mesaj</th>
		<th>Gönderim Zamanı</th>
		<th>Okundumu? </th>
		<th>Sil</th>
		<th>Cevap Ver</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.MessageId</td>
			<td>@item.NameSurname</td>
			<td>@item.Email</td>
			<td>@item.SendDate</td>
			<td>@item.MessageDetail</td>
			<td>@item.SendDate</td>
			<td>
				@if (@item.IsRead == true)
				{
					<a href="/Message/TrueToFalse/@item.MessageId" class="btn btn-dark">Okundu Olarak İşaretle </a>
				}
				@if (item.IsRead == false)
				{
					<a href="/Message/FalseToTrue/@item.MessageId" class="btn btn-info">Okunmadı Olarak İşaretle </a>
				}
			</td>
			<td><a href="/Message/MessageDelete/@item.MessageId" class="btn btn-danger">Sil</a> </td>
			<td><a href="/Message/MessageDetail/@item.MessageId" class="btn btn-success">Cevap Ver</a> </td>
		</tr>
	}
</table>


