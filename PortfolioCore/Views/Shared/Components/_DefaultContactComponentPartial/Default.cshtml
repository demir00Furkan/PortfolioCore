@model List<Contact>
<section id="contact" class="contact section">

	<!-- Section Title -->
	<div class="container section-title" data-aos="fade-up">
		<h2>İletişim</h2>
		<p>Gerekli şeylerin, kaçınılmaz bir şekilde, doğru bir şekilde yapılması gerekmektedir.</p>
	</div><!-- End Section Title -->



	<div class="container" data-aos="fade" data-aos-delay="100">
		@foreach (var item in Model)
		{
			<div class="row gy-4">


				<div class="col-lg-4">
					<div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
						<i class="bi bi-geo-alt flex-shrink-0"></i>
						<div>
							<h3>Adres</h3>
							<p>@item.Adress</p>
						</div>
					</div><!-- End Info Item -->

					<div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
						<i class="bi bi-telephone flex-shrink-0"></i>
						<div>
							<h3>Telefon Numarası</h3>
							<p>@item.PhoneNumber</p>
						</div>
					</div><!-- End Info Item -->

					<div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
						<i class="bi bi-envelope flex-shrink-0"></i>
						<div>
							<h3>Email Adresi</h3>
							<p>@item.Email</p>
						</div>
					</div><!-- End Info Item -->

				</div>

				@await Component.InvokeAsync("_DefaultMessageComponentPartial")

			</div>

			<br />
			<div class="map-container">
				<iframe src="@item.Location" width="1300" height="450" style="border:thick;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>

		}
</section>